<div class="popup-overlay">

<div class="popup">

      <h6  style="text-align: center">Request for Task - {{ product.title }} </h6>

     
      
      <form method="post" action="/contact" id="contact-form">
  <input type="hidden" name="form_type" value="contact">
  <input type="hidden" name="utf8" value="✓">
  <label for="contact-name">Name</label>
  <input type="text" id="contact-name" name="contact[name]">
  <label for="contact-email">Email</label>
  <input type="email" id="contact-email" name="contact[email]">
  <label for="contact-message">Message</label>
  <textarea id="contact-message" name="contact[message]"></textarea>
  <button type="submit" id="contact-submit">Submit</button>
</form>

<span class="popup-close"></span>
</div>

  
</div>

<style>
  
   
  
 .popup {
background-color: #f8f6eb;
border-radius: 0px;
padding: 16px 50px;
box-shadow: rgba(0, 0, 0, 0.24) 0px 1px 3px;
position: absolute;
z-index: 25;
top: 50%;
left: 50%;
transform: translate(-50%, -50%);
max-width: 500px !important;
display: none;
width: 95%;
   overflow-x: hidden;
}
@media only screen and (max-width: 767px) {
.popup {
padding: 35px 15px;
}
}
.popup-close:after {
width: 30px;
content: '╳';
position: fixed;
right: 10px;
top: 10px;
font-size: 20px;
line-height: 30px;
cursor: pointer;
}
.popup-btn {
cursor: pointer;
}
.popup-overlay {
position: fixed;
height: 100%;
width: 100% !important;
top: 0;
right: 0;
bottom: 0;
left: 0;
background: #2b403a;
display: none;
z-index: 100;
  overflow-x: hidden;
}

</style>

<script>document.querySelector(".popup-btn").addEventListener('click', function (e) {
e.stopPropagation();
document.querySelector(".popup").style.display = 'block';
}, false);
document.querySelector(".popup-btn").addEventListener('click', function () {
document.querySelector(".popup-overlay").style.display = 'block';
}, false);
document.querySelector(".popup-close").addEventListener('click', function () {
document.querySelector(".popup").style.display = 'none';
document.querySelector(".popup-overlay").style.display = 'none';
}, false);
document.querySelector("body").addEventListener('click', function () {
document.querySelector(".popup").style.display = 'none';
document.querySelector(".popup-overlay").style.display = 'none';
}, false);
document.querySelector(".popup").addEventListener('click', function (e) {
e.stopPropagation();
}, false);</script>

<script>
  document.getElementById('contact-form').addEventListener('submit', function(e) {
    e.preventDefault(); // prevent the form from submitting normally

    // get the form data
    var formData = new FormData(e.target);

    // submit the form data via AJAX
    fetch('/contact', {
      method: 'POST',
      body: formData
    })
    .then(function(response) {
      // show the "Thank you" message on a pop-up
      alert('Thank you for submitting your request! We will be in touch shortly.');
    })
    .catch(function(error) {
      console.error('Error submitting form:', error);
    });
  });
</script>
